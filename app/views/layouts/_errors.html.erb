<% if comment.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible text-center" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-lebel="Close">
      <span aria-hidden="true">&times;</span>
    </button>
      <% comment.errors.full_messages.each do |message| %>
        <strong class="fas fa-exclamation-triangle ml-4">&nbsp;<%= message %></strong>
      <% end %>
    </div>
  </div>
<% end %>
