<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center mb-4">
        <h2 class="mx-auto">ObaCommu</h2>
        <p class="font-weight-bold">おばあちゃんの趣味を世界に広めよう</p>
      </div>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-4">
        <%= f.label "お名前の入力", class: "font-weight-bold" %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "例) 花子", class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label "メールアドレスの入力", class: "font-weight-bold" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "例) example@example.com", class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label "パスワードの入力", class: "font-weight-bold mb-0" %><br />
        <div class="mb-2">半角英数字でご入力ください。</div>
        <%= f.password_field :password, autocomplete: "off", placeholder: "例) AbcDe0123fg", class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label "パスワード（確認用）の入力", class: "font-weight-bold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "例) AbcDe0123fg", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録をする", class: "btn btn-green w-100" %>
      </div>
    <% end %>

    <br>

      <p class="devise-link">
        すでに会員登録済ですか？
        <%= link_to "ログインはこちら", new_user_session_path %>
      </p>
    </div>
  </div>
</div>