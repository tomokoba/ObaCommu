<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">

    <%= render "users/errors", user: @user %>

　　<%= form_with model: @user, url: user_path(@user), method: :patch, local:true do |f| %>
      <div class="form-group mb-4">
        <%= f.label "お名前", class: "font-weight-bold mb-2" %>（2文字以上10文字以内）<br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label "メールアドレス", class: "font-weight-bold" %>（半角英数字）<br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :profile_image, "プロフィール画像", class: "font-weight-bold" %>
        <%= f.attachment_field :profile_image, class: "input" %>
      </div>

      <div class="form-group">
        <%= f.label "自己紹介", class: "font-weight-bold" %>（最大1000文字）<br />
        <%= f.text_area :profile, class: "form-control js-text", rows: 6, placeholder: '例）ゴルフが趣味です。ゴルフ友達を募集しています。' %>
        <p class="js-text-count text-right mt-1"></p>
      </div>

      <div class="actions">
        <%= f.submit "編集を完了する", class: "btn btn-green w-100" %>
      </div>
    <% end %>
    <div class="mt-3">退会をご希望の方はこちら → <%= link_to "退会する", confirm_unsubscribe_path(current_user), class: "no-underline-danger" %></div>
    </div>
  </div>
</div>