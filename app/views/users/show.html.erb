<div class="topic">
  <div class="container">
    <h1 class="mt-4 topic-font">マイページ</h1>
  </div>
</div>

<div class="container">
  <div class="mt-5">
    <div class="row">
      <div class="col-md-3 text-center">
        <%= attachment_image_tag @user, :profile_image, fallback: "no-image.jpg", size:"120x120", class: "rounded-circle" %>
      </div>
      <div class="col-md-9 pr-0">
        <div class="row">
          <div class="col-md-4">
          <h2><%= @user.name %></h2>
          </div>
          <% if @user == current_user %>
            <div class="col-md-4">
              <p class="font-weight-bold mail-font"><%= @user.short_email %></p>
            </div>
            <div class="col-md-3">
              <%= link_to "会員情報の編集", edit_user_path(@user), class: "btn btn-primary btn-shadow btn-lg d-block mx-auto" %>
            </div>
          <% end %>
        </div>
        <div class="mt-4 mr-5"><%= @user.profile %></div>
      </div>
    </div>
  </div>
</div>