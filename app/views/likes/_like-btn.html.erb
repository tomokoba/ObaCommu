  <% if post.liked_by(current_user).present? %>
    <%= link_to post.likes.count, post_like_path(post.id, post.liked_by(current_user)), method: :delete, remote: true, class: "fas fa-heart heart_red no-underline_heart" %>
  <% else %>
    <%= link_to post.likes.count, post_likes_path(post), method: :post, remote: true, class: "fas fa-heart heart_gray no-underline_heart" %>
  <% end %>